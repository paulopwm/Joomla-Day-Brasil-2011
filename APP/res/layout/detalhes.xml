<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_root"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="10dp">
    
    <TextView android:id="@+id/title_news"
    	android:layout_height="wrap_content"
    	android:layout_width="wrap_content"
    	layout_alignParentTop="true"
    	android:layout_centerHorizontal="true"
    	android:textStyle="bold">
    </TextView>
    
	<TextView android:id="@+id/date_news"
    	android:layout_height="wrap_content"
    	android:layout_width="wrap_content"
    	layout_alignParentTop="true"
    	android:layout_below="@+id/title_news"
    	android:paddingTop="10dp"
    	android:paddingBottom="10dp">
    </TextView>
	
    <TextView android:id="@+id/description_news"
    	android:layout_height="wrap_content"
    	android:layout_width="wrap_content"
    	layout_alignParentTop="true"
    	android:layout_below="@+id/date_news"
    	android:layout_centerHorizontal="true">
    </TextView>
    
    <TextView android:id="@+id/link_news"
    	android:layout_height="wrap_content"
    	android:layout_width="wrap_content"
    	layout_alignParentTop="true"
    	android:autoLink="all"
    	android:layout_below="@+id/description_news"
    	android:layout_centerHorizontal="true"
    	android:paddingTop="10dp"
    	android:paddingBottom="10dp">
    </TextView>

    <Button android:id="@+id/bt_ok"
    	android:layout_height="wrap_content"
    	android:layout_width="wrap_content"
    	android:layout_below="@+id/link_news"
    	android:text="Fechar" 
    	android:gravity="center">
    </Button>
    <Button android:id="@+id/bt_share"
    	android:layout_height="wrap_content"
    	android:layout_width="wrap_content"
    	android:layout_below="@+id/link_news"
    	android:text="Compartilhar" 
    	android:gravity="center"
    	android:layout_toRightOf="@+id/bt_ok">
    </Button>

</RelativeLayout>